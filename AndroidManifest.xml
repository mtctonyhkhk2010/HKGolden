<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polyethene.hkgolden"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.polyethene.hkgolden.PostListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.polyethene.hkgolden.RepliesActivity"
            android:label="@string/title_activity_replies" >
        </activity>
        <activity
            android:name="com.polyethene.hkgolden.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name="com.polyethene.hkgolden.RepliesWebViewActivity"
            android:label="@string/title_activity_replies_web_view" >
        </activity>
        <activity
            android:name="com.polyethene.hkgolden.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.polyethene.hkgolden.PostListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polyethene.hkgolden.PostListActivity" />
        </activity>
        <activity
            android:name="com.polyethene.hkgolden.ReplyPostActivity"
            android:label="@string/title_activity_reply_post" >
        </activity>
    </application>

</manifest>
